{
  "name": "firestore-schema-toolkit",
  "description": "A NPM package designed to help developers manage and migrate Firestore database schemas with ease.",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc && tsc-alias",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "unused-exports": "ts-prune",
    "find-duplicates": "jscpd src/",
    "find-commented": "eslint . --ext .ts --rule 'no-commented-code:1'",
    "quality-check": "npm run lint && npm run unused-exports && npm run find-duplicates && npm run find-commented",
    "prepare-husky": "husky install"
  },
  "bin": {
    "firestore-schema-export": "./dist/src/bin/firestore-schema/export/index.js",
    "firestore-schema-validate": "./dist/src/bin/firestore-schema/validate/index.js"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.0.0",
    "ajv": "^8.17.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "enquirer": "^2.4.1",
    "firebase-admin": "^13.1.0",
    "json-schema-generator": "^2.0.6",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-plugin-no-commented-code": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-coverage-badges": "^1.0.0",
    "jscpd": "^3.5.3",
    "lint-staged": "^13.2.1",
    "ts-jest": "^29.1.0",
    "ts-prune": "^0.10.3",
    "tsc-alias": "^1.8.11",
    "typescript": "^4.5.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
