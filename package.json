{
  "name": "firestore-schema-toolkit",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "unused-exports": "ts-prune",
    "find-duplicates": "jscpd src/",
    "find-commented": "eslint . --ext .ts --rule 'no-commented-code:1'",
    "quality-check": "npm run lint && npm run unused-exports && npm run find-duplicates && npm run find-commented",
    "prepare-husky": "husky install"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-plugin-no-commented-code": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-coverage-badges": "^1.0.0",
    "jscpd": "^3.5.3",
    "lint-staged": "^13.2.1",
    "ts-jest": "^29.1.0",
    "ts-prune": "^0.10.3",
    "typescript": "^4.5.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
